<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.purva.amazonmovie.MainActivityJ">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.prajakta.signinp.Search"
        android:background="@color/colorBackground"
        >


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="Search"
            android:id="@+id/button2"

            android:background="@color/colorTextHint"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:text="Movie Name"
            android:gravity="left|center"
            android:textSize = "18dp"
            android:id="@+id/editText4"
            android:textColor="@android:color/black"

            android:background="@android:color/holo_orange_light"
            android:drawable="@color/green"

            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentTop="true"

            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <TextView
            android:id="@+id/propertyID"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText4"
            android:layout_marginTop="22dp"
            android:background="@android:color/white"
            android:text="DisplayProperties"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="Comment"
            android:background="@android:color/holo_orange_light"
            android:textSize = "18dp"
            android:gravity="left|center"
            android:id="@+id/commentId"
            android:textColor="@android:color/black"

            android:layout_below="@+id/propertyID"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:id="@+id/buttonR"
            android:background="@color/colorTextHint"
            android:layout_alignTop="@+id/commentId"
            android:layout_alignRight="@+id/propertyID"
            android:layout_alignEnd="@+id/propertyID" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Result"
            android:textSize = "18dp"
            android:id="@+id/resultID"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:layout_below="@+id/commentId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:text="recommendResult"
            android:textSize = "18dp"
            android:id="@+id/recommendID"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:layout_below="@+id/resultID"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:layout_alignRight="@+id/buttonR"
            android:layout_alignEnd="@+id/buttonR" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
